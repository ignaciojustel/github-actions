name: Saludo usando variables y secretos
run-name: Variables y Secretos
on:
  workflow_dispatch
env:
  DIA_DE_SEMANA : Viernes
jobs:
  saludo-variables:
    runs-on: ubuntu-latest
    env:
      SALUDO: Hola
    steps:
      - name: Saludo variables
        run: echo "$SALUDO, ${{ vars.NOMBRE }}. Hoy es ${{ env.DIA_DE_SEMANA }}"
  saludo-secretos:
    runs-on: ubuntu-latest
    steps:
      - name: Saludo secretos
        run: echo "$SALUDO, ${{ vars.NOMBRE }}. Tu contrase√±a es ${{ secrets.CONTRASENIA }}!"
